/* pages/index/index.wxss */
/* 轮播图 */
.banners{
width: 100%;
height: 300rpx;
}
.banners image{
    width: 100%;
    height: 100%;
}
.navConntainer{
    display: flex;
}
.navitem :nth-child(2){
    font-size: 26rpx;
    }
.navitem{
    display: flex;
    flex-direction: column;/* 排列方式，竖排 */
    align-items: center;
    width: 20%;
}
.iconfont{
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    text-align: center;
    background-color: #D43C33;
    font-size: 50rpx;
    line-height: 100rpx;
    color: #fff;
    margin: 20rpx 0;
}

.recommendScrool{
    display: flex;
   margin-left: 20rpx;
   height: 300rpx;
}
.scrollItem{
    width: 200rpx;
    margin-right: 20rpx;
}

.scrollItem image{
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;
}
.scrollItem text{
    font-size: 26rpx;
    overflow: hidden;/* 隐藏 */
    text-overflow: ellipsis;/* ...代替 */
    display: -webkit-box;
    -webkit-box-orient: vertical;/* 纵向对齐 */
    -webkit-line-clamp: 2;/* 设置行数 */
}
.topListSwiper{
    height: 400rpx;
}
.swiperItem{
    font-size: 30rpx;
    line-height: 80rpx;
    width: 96%;
    background-color: #fbfbfb;
    padding-left: 20rpx;
    border-radius: 30rpx;
}
.musicItem{
    display: flex;
    margin-bottom: 20rpx;
}
.musicItem image{
    width: 100rpx;
    height: 100rpx;

}
.musicItem .count{
    width: 100rpx;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
}
.musicItem .musicName{
    height: 100rpx;
    line-height: 100rpx;
}
